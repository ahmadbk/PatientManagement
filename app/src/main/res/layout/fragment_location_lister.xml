<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="200pt"
        android:layout_height="match_parent">
        <LinearLayout
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="100pt"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/linearLayout"
            tools:context="com.example.ahmad.patientmanagement.LocationFragmentLister">
            <FrameLayout
                android:layout_width="100pt"
                android:layout_height="wrap_content"
                android:id="@+id/locationsView"></FrameLayout>
            <FrameLayout
                android:layout_width="100pt"
                android:layout_height="wrap_content"
                android:id="@+id/locationsView1"></FrameLayout>
            <FrameLayout
                android:layout_width="100pt"
                android:layout_height="wrap_content"
                android:id="@+id/locationsView2"></FrameLayout>
            <FrameLayout
                android:layout_width="100pt"
                android:layout_height="wrap_content"
                android:id="@+id/locationsView3"></FrameLayout>
            <FrameLayout
                android:layout_width="100pt"
                android:layout_height="wrap_content"
                android:id="@+id/locationsView4"></FrameLayout>
        </LinearLayout>
    </ScrollView>