<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/addDiagnostic"
    tools:context="com.example.ahmad.patientmanagement.AddDiagnosticFragment">

    <LinearLayout
        android:layout_width="200pt"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Add a new diagnostic"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Diagnostic Notes"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:hint="Tap to start typing"
            android:id="@+id/notesEditText"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:onClick="addDiagnosticButtonClick"/>
    </LinearLayout>

</FrameLayout>
